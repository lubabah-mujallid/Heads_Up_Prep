<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llRecycler"
        android:background="#FF8DB7"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvRecyclerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center_horizontal"
            android:text="Name"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvRecyclerT1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="T1"
            android:textColor="@color/white"

            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvRecyclerT2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="T2"
            android:textColor="@color/white"

            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvRecyclerT3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="T3"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="14sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/recyclerSearchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_youtube_searched_for_24"/>
    </LinearLayout>

</LinearLayout>